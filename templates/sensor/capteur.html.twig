{% extends "base.html.twig" %}

{% block body %}
    <div class="my-5 p-2 d-flex flex-wrap justify-content-center">
        {% set unique_ips = {} %}
        {% for group in items %}
            {% for item in group %}
                {% if item.ip not in unique_ips %}
                    {% set unique_ips = unique_ips|merge({(item.ip): item}) %}
                {% else %}
                    {% if item.temps > unique_ips[item.ip].temps %}
                        {% set unique_ips = unique_ips|merge({(item.ip): item}) %}
                    {% endif %}
                {% endif %}
            {% endfor %}
        {% endfor %}

        {% for ip, item in unique_ips %}
            <div class="card m-2" style="width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title">Capteur {{ loop.index }}</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Température : {{ item.temperature }} °C</li>
                        <li class="list-group-item">Pression : {{ item.pression }} Pa</li>
                        <li class="list-group-item">Qualité d'air : {{ item.qualite }} PM2,5</li>
                        <li class="list-group-item">Dernière donnée : {{ item.temps }}</li>
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
