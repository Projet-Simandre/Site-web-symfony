{% extends "base.html.twig" %}

{% block body %}
	<div
		class="row mt-1 container-fluid mx-auto d-flex align-items-center pt-5">
		<!-- debut de la page -->
		<div class="col-lg-1"></div>
		<!-- margin left -->
		<div class="col-lg-4 s-20">
			<div class="card {{ colorClass }}">
				<div class="card-header">
					<h3 class="text-center">Moyenne des données</h3>
				</div>
				<div class="card-body">
					<div class="d-flex justify-content-between">
						<p>Température :</p>
						<p>{{ moyennes.temperature | number_format(1, '.', '')}} °C</p>
					</div>
					<div class="d-flex justify-content-between">
						<p>Humidité :</p>
						<p>{{ moyennes.humidite | number_format(1, '.', '')}} %</p>
					</div>
					<div class="d-flex justify-content-between">
						<p>Qualité d'air :</p>
						<p>{{ moyennes.qualite | number_format(1, '.', '')}} PM2,5</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-1"></div>
		<div class="col-lg d-flex align-items-center pb-3 border border-3 rounded-2 border-info">
			<!-- parti droite de la page -->
			<img src="{{ asset('uploads/brochures/' ~ latestUpload.mapFilename) }}" class="w-100" alt="Plan de l'entreprise">
		</div>
	</div>
{% endblock %}
